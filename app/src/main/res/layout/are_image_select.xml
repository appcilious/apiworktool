<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RadioGroup android:id="@+id/are_image_select_radio_group" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_alignParentTop="true">
        <RadioButton android:id="@+id/are_image_select_from_local" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="From Local"/>
        <RadioButton android:id="@+id/are_image_select_from_internet" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="From Internet"/>
    </RadioGroup>
    <RelativeLayout android:id="@+id/are_image_select_from_internet_layout" android:focusable="true" android:focusableInTouchMode="true" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/are_image_select_radio_group">
        <EditText android:id="@+id/are_image_select_internet_image_url" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/are_image_insert_hint" android:inputType="textNoSuggestions"/>
        <TextView android:textSize="18sp" android:textColor="?attr/colorPrimary" android:id="@+id/are_image_select_insert" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="Insert" android:layout_below="@+id/are_image_select_internet_image_url" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
